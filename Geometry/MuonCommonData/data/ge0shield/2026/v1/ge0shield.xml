  <Constant name="dzPE"       value="7.5*mm"/>
  <Constant name="dzSS"       value="2.5*mm"/>
  <Constant name="zposPb"     value="([cms:CalorBeamZ3] + [ge0:zFrGE0] + 
  				      2*[ge0:dzGE0] + [ge0:zGpGE0] + [dzPb])"/>
  <Constant name="zposPE"     value="([zposPb] + [dzPb] + [dzPE])"/>
  <Constant name="zposSS"     value="([zposPE] + [dzPE] + [dzSS])"/>
 </ConstantsSection>


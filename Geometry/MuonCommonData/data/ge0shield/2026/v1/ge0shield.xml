  <Constant name="rMinGE0Pb1" value="([rMaxGE0Pb1] - 10.0*mm)"/>
  <Constant name="rMinGE0PE1" value="([rMinGE0Pb1] - 50.0*mm)"/>
  <Constant name="rMinGE0Pb2" value="([rMinGE0PE1] - 10.0*mm)"/>

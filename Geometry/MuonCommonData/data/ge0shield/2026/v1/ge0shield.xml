  <Tubs name="ShieldingStainlessSteel_1_GE0" rMin="[rMinGE0SS1]" rMax="[rMinGE0PE2]" dz="[mf:dzGE0]" startPhi="0*deg" deltaPhi="360*deg"/>
  <Tubs name="ShieldingAntinomyLead_3_GE0" rMin="[ge0:rMin]" rMax="[ge0:rMax]" dz="[dzPb]" startPhi="0*deg" deltaPhi="360*deg"/>
  <Tubs name="ShieldingBoronPoly_3_GE0" rMin="[ge0:rMin]" rMax="[ge0:rMax]" dz="[dzPE]" startPhi="0*deg" deltaPhi="360*deg"/>
  <Tubs name="ShieldingStainlessSteel_2_GE0" rMin="[ge0:rMin]" rMax="[ge0:rMax]" dz="[dzSS]" startPhi="0*deg" deltaPhi="360*deg"/>
 </SolidSection>

